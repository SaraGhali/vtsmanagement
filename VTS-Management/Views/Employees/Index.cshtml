@model IEnumerable<VTS_Management.Models.Employee>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-2">
        <h1>Employees</h1>
    </div>
    <div class="col-lg-6">
        <a href="@Url.Action("Create","Employees")" class="btn btn-primary hover mb-5"><i class="fa fa-plus mr-3"></i>Add New Employee</a>

    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeDetails)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeePhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeDetails)
        </td>
        <td>
            <a href="@Url.Action("Edit","Employees",new { id=item.EmployeeId })" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>
            <a href="@Url.Action("Details","Employees",new { id = item.EmployeeId })" class="btn btn-success"><i class="fa fa-User"></i>Details</a>
            <a href="@Url.Action("Delete","Employees",new { id = item.EmployeeId })" class="btn btn-danger" onclick="return confirm('Are you sure Are you sure you want to delete this?')"><i class="fa fa-trash"></i>Delete</a>
        </td>
    </tr>
}

</table>
