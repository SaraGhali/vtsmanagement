@model IEnumerable<VTS_Management.Models.Project>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-2">
        <h1>Projects</h1>
    </div>
    <div class="col-lg-6">
        <a href="@Url.Action("Create","Projects")" class="btn btn-primary hover mb-5"><i class="fa fa-plus mr-3"></i>Add New Project</a>

    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectId)
        </th>
        <th>
    @Html.DisplayNameFor(model => model.ProjectName)
</th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectEmployee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectProfit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectCustomer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectSales)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectId)
        </td>
        <td>
    @Html.DisplayFor(modelItem => item.ProjectName)
</td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectEmployee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectProfit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectCustomer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectSales)
        </td>
        <td>
            <a href="@Url.Action("Edit","Projects",new { id=item.ProjectId })" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>
            <a href="@Url.Action("Details","Projects",new { id = item.ProjectId })" class="btn btn-success"><i class="fa fa-User"></i>Details</a>
            <a href="@Url.Action("Delete","Projects",new { id = item.ProjectId })" class="btn btn-danger" onclick="return confirm('Are you sure Are you sure you want to delete this?')"><i class="fa fa-trash"></i>Delete</a>
       
        </td>
    </tr>
}

</table>
